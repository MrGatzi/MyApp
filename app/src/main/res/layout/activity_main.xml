<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <ScrollView android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/scan_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/scan" />

            <TextView
                android:id="@+id/scan_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/scan_button"
                android:layout_centerHorizontal="true"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/Kassen_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scan_format"
                android:layout_centerHorizontal="true"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/Belegnummer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Kassen_ID"
                android:layout_centerHorizontal="true"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/Beleg_Datum_Uhrzeit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Belegnummer"
                android:layout_centerHorizontal="true"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/Betrag_Satz_Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Beleg_Datum_Uhrzeit"
                android:layout_centerHorizontal="true"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/Betrag_Satz_Ermaessigt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Betrag_Satz_Normal"
                android:layout_centerHorizontal="true"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/Betrag_Satz_Ermaessigt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Betrag_Satz_Ermaessigt_1"
                android:layout_centerHorizontal="true"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/Betrag_Satz_Null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Betrag_Satz_Ermaessigt_2"
                android:layout_centerHorizontal="true"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/Betrag_Satz_Besonders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Betrag_Satz_Null"
                android:layout_centerHorizontal="true"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/Stand_Umsatz_Zaehler_AES256_ICM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Betrag_Satz_Besonders"
                android:layout_centerHorizontal="true"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/Stand_Umsatz_Zaehler_AES256_ICM_unver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Stand_Umsatz_Zaehler_AES256_ICM"
                android:layout_centerHorizontal="true"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/Zertifikat_Seriennummer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Stand_Umsatz_Zaehler_AES256_ICM_unver"
                android:layout_centerHorizontal="true"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/Sig_Voriger_Beleg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Zertifikat_Seriennummer"
                android:layout_centerHorizontal="true"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/Sig_Nächster_Beleg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Sig_Voriger_Beleg"
                android:layout_centerHorizontal="true"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/Signaturwert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Sig_Nächster_Beleg"
                android:layout_centerHorizontal="true"
                android:textIsSelectable="true" />

            <Button
                android:id="@+id/choose_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Signaturwert"
                android:layout_centerHorizontal="true"
                android:text="@string/choose" />

            <TextView
                android:id="@+id/CryptoFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choose_button"
                android:layout_centerHorizontal="true"
                android:text="@string/CryptoFile_String"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/CryptoFile_Path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CryptoFile"
                android:layout_centerHorizontal="true"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/Read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CryptoFile_Path"
                android:layout_centerHorizontal="true"
                android:textIsSelectable="true" />
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:weightSum="100">

        <TextView
            android:id="@+id/Counter"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="7"
            android:gravity="center"
            android:textColor="#FF0000"
            android:textIsSelectable="true" />

        <ImageButton
            android:id="@+id/save_button"

            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="31"
            android:src="@drawable/save" />

        <ImageButton
            android:id="@+id/undo_button"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="31"
            android:src="@drawable/undo" />

        <ImageButton
            android:id="@+id/email_button"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="31"
            android:src="@drawable/mail" />
    </LinearLayout>
</RelativeLayout>
